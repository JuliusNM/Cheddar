<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context="com.example.dell.cheddar.SendMoneyActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/select_country_layout"
        android:layout_height="40dp"
        android:background="@drawable/rounded"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receiving Country:"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@+id/countries_spinner"
            android:layout_alignStart="@+id/countries_spinner" />
        <Spinner
            android:id="@+id/countries_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </Spinner>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/select_bank_layout"
        android:layout_height="40dp"
        android:background="@drawable/rounded"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/select_country_layout">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receiving Bank:"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@+id/countries_spinner"
            android:layout_alignStart="@+id/countries_spinner" />
        <Spinner
            android:id="@+id/banks_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </Spinner>

    </LinearLayout>

  <EditText
        android:id="@+id/account_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Recipient's Account Number"
        android:inputType="number"
        android:background="@drawable/rounded"
        android:paddingLeft="10dp"
        android:layout_below="@+id/select_bank_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_from_layout"
        android:weightSum="4"
        android:layout_below="@+id/account_number">
        <TextView

            android:id="@+id/send_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send money from:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_marginTop="17dp" />
        <info.hoang8f.android.segmented.SegmentedGroup
            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmented_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:layout_below="@+id/send_from"
            android:orientation="horizontal"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_corner_radius="5dp">

            <RadioButton
                android:id="@+id/button_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank"
                android:checked="true"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/button_card"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card" />
        </info.hoang8f.android.segmented.SegmentedGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/radio_holder"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_from_layout">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_group_accounts"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="vertical"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bank_group_accounts"
            android:layout_marginTop="10dp"
            android:orientation="vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/radio_holder"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF"
            android:background="@drawable/pink_rounded"/>
    </LinearLayout>

</RelativeLayout>
