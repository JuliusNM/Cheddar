<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

   <ImageView
       android:id="@+id/recipient_picture"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:background="@android:color/holo_green_dark"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jerry Yamg (not yahoo))"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/recipient_country"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/recipient_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Access Bank"/>

        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.v7.widget.MenuPopupWindow.MenuDropDownListView
            android:id="@+id/recipient_options"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_more_vert_white_18dp"
            android:backgroundTint="@color/colorPrimary">

        </android.support.v7.widget.MenuPopupWindow.MenuDropDownListView>

        <ImageButton
            android:id="@+id/recipient_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:background="@android:drawable/ic_media_next"
            android:layout_centerVertical="true"/>

    </RelativeLayout>



</LinearLayout>
