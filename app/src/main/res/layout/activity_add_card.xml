<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context="com.example.dell.cheddar.AddCard">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/editText_card_number"
        android:layout_width="368dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/card_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enterCard"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/editText_card_issuer"
        android:layout_width="368dp"
        android:layout_below="@+id/editText_card_number"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/card_issuer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter card Issuer"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/time_cvv"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_card_issuer"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/expiry_month"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="MM"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#24df48"
            android:inputType="datetime" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="20sp"/>
            <EditText
                android:id="@+id/expiry_year"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="YY"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#24df48"
                android:inputType="datetime" />
            <EditText
                android:id="@+id/cvv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="CVV"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#24df48"
                android:inputType="number" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cvv"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/buttons"
        android:layout_below="@+id/time_cvv">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel"
            android:text="Cancel" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save"
            android:text="Save"
            android:layout_marginLeft="165dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons"
        android:layout_marginTop="20dp"
        android:id="@+id/add_another"
        android:text="Save and add another card"/>


</RelativeLayout>
