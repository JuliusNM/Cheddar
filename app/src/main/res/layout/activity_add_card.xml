<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context="com.example.dell.cheddar.AddCard">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/editText_card_number"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">


        <EditText
            android:id="@+id/card_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enterCard"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#24df48"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_card_number"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/laout_exmonth"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints">
            <EditText
                android:id="@+id/expiry_month"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="MM"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#24df48"
                android:inputType="number" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/expiry_year"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="YY"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#24df48"
                android:inputType="number" />
            <EditText
                android:id="@+id/cvv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="CVV"
                android:layout_marginLeft="80dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#24df48"
                android:inputType="number" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cvv"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginLeft="160dp"/>

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
