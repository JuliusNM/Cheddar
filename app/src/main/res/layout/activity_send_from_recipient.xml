    <!--</LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/send_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send money from:"
            android:textStyle="bold"

            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_marginTop="17dp" />
        <info.hoang8f.android.segmented.SegmentedGroup
            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmented_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:layout_below="@+id/send_from"
            android:orientation="horizontal"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_corner_radius="5dp">

            <RadioButton
                android:id="@+id/button_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank"
                android:checked="true"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/button_card"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card" />
        </info.hoang8f.android.segmented.SegmentedGroup>

    </LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:id="@+id/radio_holder"
android:layout_height="wrap_content"
android:layout_below="@+id/send_from_layout">
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card_group_accounts"
    android:visibility="gone"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_below="@+id/send_from">

</RadioGroup>

<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bank_group_accounts"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_below="@+id/send_from">


</RadioGroup>


</LinearLayout>
<LinearLayout
android:id="@+id/LinearLayout1"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center|bottom"
android:layout_marginRight="50dp"
android:layout_marginLeft="50dp"
android:layout_below="@+id/radio_holder"
android:orientation="horizontal" >

<Button
    android:id="@+id/next"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Next"
    android:layout_marginBottom="10dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textColor="#FFFFFF"
    android:background="@drawable/pink_rounded"/>
</LinearLayout>
</LinearLayout>


